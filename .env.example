# CHIMERA AUTARCH Environment Variables
# Copy this file to .env and customize as needed
# Variables here override config.yaml settings

# ===== Server Configuration =====
# CHIMERA_SERVER_WEBSOCKET_HOST=localhost
# CHIMERA_SERVER_WEBSOCKET_PORT=8765
# CHIMERA_SERVER_HTTP_HOST=localhost
# CHIMERA_SERVER_HTTP_PORT=8000

# SSL/TLS (set to true to enable, requires cert files)
# CHIMERA_SERVER_SSL_ENABLED=false
# CHIMERA_SERVER_SSL_CERT_PATH=cert.pem
# CHIMERA_SERVER_SSL_KEY_PATH=key.pem

# ===== Metacognitive Engine =====
# Confidence threshold (0.0 - 1.0)
# CHIMERA_METACOGNITIVE_CONFIDENCE_THRESHOLD=0.6

# Learning cooldown (seconds)
# CHIMERA_METACOGNITIVE_LEARNING_COOLDOWN=300

# Failure history size
# CHIMERA_METACOGNITIVE_FAILURE_HISTORY_SIZE=100

# ===== Node Management =====
# CHIMERA_NODES_HEARTBEAT_INTERVAL=30.0
# CHIMERA_NODES_NODE_TIMEOUT=90.0
# CHIMERA_NODES_INITIAL_REPUTATION=1.0

# ===== Persistence =====
# Database path
# CHIMERA_PERSISTENCE_DATABASE_PATH=chimera_memory.db

# Backup settings
# CHIMERA_PERSISTENCE_BACKUP_ENABLED=true
# CHIMERA_PERSISTENCE_BACKUP_INTERVAL=3600
# CHIMERA_PERSISTENCE_BACKUP_DIR=backups
# CHIMERA_PERSISTENCE_BACKUP_RETENTION=24

# ===== Federated Learning =====
# CHIMERA_FEDERATED_LEARNING_SERVER_ADDRESS=0.0.0.0:8080
# CHIMERA_FEDERATED_LEARNING_DEFAULT_ROUNDS=3
# CHIMERA_FEDERATED_LEARNING_MIN_ROUNDS=3
# CHIMERA_FEDERATED_LEARNING_MAX_ROUNDS=10

# ===== Logging =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# CHIMERA_LOGGING_LEVEL=INFO

# File logging
# CHIMERA_LOGGING_FILE_ENABLED=false
# CHIMERA_LOGGING_FILE_PATH=logs/chimera.log
# CHIMERA_LOGGING_FILE_MAX_BYTES=10485760
# CHIMERA_LOGGING_FILE_BACKUP_COUNT=5

# Component-specific logging
# CHIMERA_LOGGING_COMPONENTS_METACOG=INFO
# CHIMERA_LOGGING_COMPONENTS_PERSISTENCE=INFO
# CHIMERA_LOGGING_COMPONENTS_HEART=INFO
# CHIMERA_LOGGING_COMPONENTS_FEDERATED=INFO

# ===== Security =====
# CHIMERA_SECURITY_TOKEN_LENGTH=16
# CHIMERA_SECURITY_REQUIRE_AUTHENTICATION=true

# ===== Performance =====
# CHIMERA_PERFORMANCE_THREAD_POOL_WORKERS=4
# CHIMERA_PERFORMANCE_DB_TIMEOUT=30.0
# CHIMERA_PERFORMANCE_MAX_MESSAGE_SIZE=1048576

# ===== Development =====
# Enable debug mode (more verbose logging)
# CHIMERA_DEBUG=false

# Disable backup for faster testing
# CHIMERA_PERSISTENCE_BACKUP_ENABLED=false

# ===== Production =====
# For production deployments, uncomment and set:
# CHIMERA_SERVER_WEBSOCKET_HOST=0.0.0.0
# CHIMERA_SERVER_HTTP_HOST=0.0.0.0
# CHIMERA_SERVER_SSL_ENABLED=true
# CHIMERA_LOGGING_LEVEL=WARNING
# CHIMERA_LOGGING_FILE_ENABLED=true
