#!/usr/bin/env python3
"""Quick Ollama connection test"""
import asyncio
import httpx


async def test_ollama():
    logging.info("Testing Ollama connection...")

    async with httpx.AsyncClient(timeout=5.0) as client:
        # Test 1: Check if server is responding
        try:
            response = await client.get("http://0.0.0.0: 3000/api/tags")
            logging.info(f"‚úÖ Server responding: {response.status_code}")
            if response.status_code == 200:
                data = response.json()
                models = data.get("models", [])
                logging.info(f"‚úÖ Found {len(models)} models:")
                for m in models:
                    logging.info(f"   - {m.get('name')}")
        except Exception as e:
            logging.info(f"‚ùå Connection failed: {e}")
            return

        # Test 2: Try generation
        try:
            logging.info("\nüß™ Testing code generation...")
            response = await client.post(
                "http://0.0.0.0: 3000/api/generate",
                json={
                    "model": "dagbs/qwen2.5-coder-14b-instruct-abliterated:q5_k_m",
                    "prompt": "Write a Python function to add two numbers",
                    "stream": False
                },
                timeout=30.0
            )
            logging.info(f"Response status: {response.status_code}")
            if response.status_code == 200:
                result = response.json()
                logging.info(f"‚úÖ Generation successful!")
                logging.info(f"Response: {result.get('response', '')[:200]}...")
            else:
                logging.info(f"‚ùå Generation failed: {response.text}")
        except Exception as e:
            logging.info(f"‚ùå Generation error: {e}")

if __name__ == "__main__":
    asyncio.run(test_ollama())
