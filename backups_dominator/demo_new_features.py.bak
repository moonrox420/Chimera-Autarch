def demo_graphql_topics():
    """Demo: GraphQL topics query"""
    print_section("6. GraphQL - Topics")

    query = """
    {
      topics {
        name
        confidence
        failureCount
        successRate
      }
    }
    """

    try:
        response = requests.post(
            f"{CHIMERA_BASE_URL}/graphql",
            json={'query': query},
            timeout=5
        )
        data = response.json()

        if 'errors' in data:
            logging.info(f"‚ùå GraphQL Error: {data['errors']}")
            return

        topics = data['data']['topics']

        if not topics:
            logging.info("No topics found yet. Topics are created when failures are logged.")
            return

        logging.info(f"Total Topics: {len(topics)}\n")

        for topic in topics:
            logging.info(f"üéØ {topic['name']}")
            logging.info(f"   Confidence: {topic['confidence']:.2%}")
            logging.info(f"   Failures: {topic['failureCount']}")
            logging.info(f"   Success Rate: {topic['successRate']:.1%}\n")

    except Exception as e:
        logging.info(f"‚ùå Error: {e}")


def demo_graphql_evolutions():
    """Demo: GraphQL evolutions query"""
    print_section("7. GraphQL - Recent Evolutions")

    query = """
    {
      evolutions(limit: 5) {
        topic
        failureReason
        appliedFix
        observedImprovement
        timestamp
      }
    }
    """

    try:
        response = requests.post(
            f"{CHIMERA_BASE_URL}/graphql",
            json={'query': query},
            timeout=5
        )
        data = response.json()

        if 'errors' in data:
            logging.info(f"‚ùå GraphQL Error: {data['errors']}")
            return

        evolutions = data['data']['evolutions']

        if not evolutions:
            logging.info("No evolutions recorded yet.")
            logging.info("Evolutions are created when the system learns from failures.")
            return

        logging.info(f"Showing {len(evolutions)} most recent evolutions:\n")

        for evo in evolutions:
            timestamp = time.strftime(
                '%Y-%m-%d %H:%M:%S', time.localtime(evo['timestamp']))
            logging.info(f"üîÑ [{timestamp}] {evo['topic']}")
            logging.info(f"   Issue: {evo['failureReason']}")
            logging.info(f"   Fix: {evo['appliedFix']}")
            logging.info(f"   Improvement: {evo['observedImprovement']:+.2%}\n")

    except Exception as e:
        logging.info(f"‚ùå Error: {e}")


