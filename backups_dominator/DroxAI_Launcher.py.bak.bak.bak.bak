#!/usr/bin/env python3
import os
import sys
import time
import subprocess
import webbrowser
from pathlib import Path
import psutil

# ──────────────────────────────────────────────────────────────
# 1. NUKE EVERY OLD FORTRESS — NO SURVIVORS
# ──────────────────────────────────────────────────────────────
for proc in psutil.process_iter(['pid', 'name', 'cmdline']):
    try:
        cmd = proc.info['cmdline']
        if cmd and len(cmd) > 1:
            cmd_str = ' '.join(cmd).lower()
            if any(x in cmd_str for x in ['chimera_autarch', 'droxai_core', 'main.py', 'app.py']):
                print(f"[LAUNCHER] ☠️  TERMINATING OLD PROCESS → PID {proc.pid}")
                proc.kill()
    except:
        pass

# ──────────────────────────────────────────────────────────────
# 2. THIS IS THE LAUNCHER — NO RECURSION ALLOWED
# ──────────────────────────────────────────────────────────────
if Path(sys.argv[0]).name != "DroxAI_Launcher.py":
    print("[LAUNCHER] ERROR: You must name this file exactly 'DroxAI_Launcher.py'")
    sys.exit(1)

print("[LAUNCHER] FINAL LAUNCH SEQUENCE INITIATED — ONE INSTANCE ONLY")

# ──────────────────────────────────────────────────────────────
# 3. PROJECT ROOT — BULLETPROOF
# ──────────────────────────────────────────────────────────────
PROJECT_ROOT = Path(__file__).resolve().parent
sys.path.insert(0, str(PROJECT_ROOT))

# ──────────────────────────────────────────────────────────────
# 4. CONFIG
# ──────────────────────────────────────────────────────────────
try:
    from DroxAI_ConfigManager import ConfigManager
    config = ConfigManager.load_config()
except Exception as e:
    print(f"[FATAL] Config failed → {e}")
    sys.exit(1)

# ──────────────────────────────────────────────────────────────
# 5. FIND AND LAUNCH YOUR LATEST CORE
# ──────────────────────────────────────────────────────────────
backend = PROJECT_ROOT / "chimera_autarch.py"
if not backend.exists():
    print("[FATAL] chimera_autarch.py not found — did you delete it?")
    sys.exit(1)

print(f"[DROXAI] EXECUTING → {backend.name}")
print(f"[DROXAI] DASHBOARD → http://localhost:{config.server.http_port}")
print(f"[DROXAI] WEBSOCKET → ws://localhost:{config.server.websocket_port}")

proc = subprocess.Popen(
    [sys.executable, str(backend)],
    cwd=str(PROJECT_ROOT),
    env=os.environ.copy()
)

time.sleep(8)

if proc.poll() is None:
    # THIS IS THE ONLY URL THAT WORKS — NO MORE 404s
    url = f"http://localhost:{config.server.http_port}/dashboard"
    print(f"[DROXAI] FORTRESS IS LIVE → {url}")
    webbrowser.open(url)
else:
    print(f"[DROXAI] CRASHED ON LAUNCH — CODE {proc.poll()}")
    sys.exit(1)

try:
    proc.wait()
except KeyboardInterrupt:
    print("\n[DROXAI] Fortress shutdown by king command.")
    proc.terminate()

print("[DROXAI] Empire secured. King has logged off.")